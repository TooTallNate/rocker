#!/bin/bash
set -euo pipefail
c() {
  tput "$@" 2>/dev/null ||:
}
BOLD="$(c bold)"
GREY="$(c setaf 0)"
NO_COLOR="$(c sgr0)"

debug_mode="${DEBUG:-}"
version="1.0.0"
docker="/usr/bin/docker"
hostname="$(hostname | tr '[:upper:]' '[:lower:]')"

# Docker for Mac
if [ -f "/Applications/Docker.app/Contents/Resources/bin/docker" ]; then
  docker="/Applications/Docker.app/Contents/Resources/bin/docker"
fi

if [ $# -eq 1 ] && [ "$1" = "-v" -o "$1" = "--version" ]; then
  docker_version="$(DOCKER_HOST= "${docker}" "$@")"
  echo "${docker_version} (rocker version ${version})"
  exit 0
fi

args=()
rocker_hostname=

add_volume() {
  args+=("--volume" "/mnt/sshfs/${hostname}${1}")
}

# print to stderr when `DEBUG` env var is set
debug() {
  if [ ! -z "${debug_mode}" ]; then
    echo "${BOLD}${GREY}>${NO_COLOR}" "$@" >&2
  fi
}

debug_args() {
  local slash=" \\"
  debug "\$ ${1}${slash}"
  shift
  for arg in "$@"; do
    if [ "$#" -eq 1 ]; then
      slash=
    fi
    debug "    ${arg}${slash}"
  done
}

parse_host() {
  if [ "$(awk -F:// '{print $1}' <<< "$1")" = "ssh" ]; then
    rocker_hostname="$1"
  else
    args+=("--host" "$1")
  fi
  has_host=1
}

has_host=0

# Parse argv
while [ $# -gt 0 ]; do
  case "$1" in
    -H=*|--host=*) parse_host "${1#*=}"; shift 1;;
    -H|--host) parse_host "${2}"; shift 2;;

    -v=*|--volume=*) add_volume "${1#*=}"; shift 1;;
    -v|--volume) add_volume "${2}"; shift 2;;

    *) args+=("${1}"); shift 1;;
  esac
done

# Parse $DOCKER_HOST environment variable
if [ "$has_host" -eq 0 ] && [ -n "${DOCKER_HOST:-}" ]; then
  parse_host "${DOCKER_HOST}"
  unset DOCKER_HOST
fi

if [ ! -z "${rocker_hostname}" ]; then
  debug '$' DOCKER_HOST="${rocker_hostname}" rockerd
  docker_socket="$(DOCKER_HOST="${rocker_hostname}" rockerd)"
  args=("--host" "unix://${docker_socket}" ${args[@]+"${args[@]}"})
fi

debug_args ${docker} ${args[@]+"${args[@]}"}
exec ${docker} ${args[@]+"${args[@]}"}
