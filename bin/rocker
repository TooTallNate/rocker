#!/bin/bash
set -euo pipefail
c() {
  tput "$@" 2>/dev/null ||:
}
BOLD="$(c bold)"
GREY="$(c setaf 0)"
NO_COLOR="$(c sgr0)"

debug_mode="${DEBUG:-}"
version="1.0.0"
docker="/usr/bin/docker"
hostname="$(hostname | tr '[:upper:]' '[:lower:]')"

# Docker for Mac
if [ -f "/Applications/Docker.app/Contents/Resources/bin/docker" ]; then
  docker="/Applications/Docker.app/Contents/Resources/bin/docker"
fi

if [ $# -eq 1 ] && [ "$1" = "-v" -o "$1" = "--version" ]; then
  docker_version="$(DOCKER_HOST= "${docker}" "$@")"
  echo "${docker_version} (rocker version ${version})"
  exit 0
fi

args=()
rocker_hostname=

add_volume() {
  args+=("--volume" "/mnt/sshfs/${hostname}${1}")
}

# print to stderr when `DEBUG` env var is set
debug() {
  if [ ! -z "${debug_mode}" ]; then
    echo "${BOLD}${GREY}>${NO_COLOR}" "$@" >&2
  fi
}

debug_args() {
  local slash=" \\"
  debug "\$ ${1}${slash}"
  shift
  for arg in "$@"; do
    if [ "$#" -eq 1 ]; then
      slash=
    fi
    debug "    ${arg}${slash}"
  done
}

parse_host() {
  local host="${1}"
  if [ "$(echo "${host}" | awk -F:// '{print $1}')" = "ssh" ]; then
    rocker_hostname="${host}"
  else
    args+=("--host" "${host}")
  fi
}

# Parse $DOCKER_HOST environment variable
if [ ! -z "${DOCKER_HOST:-}" ]; then
  parse_host "${DOCKER_HOST}"
  unset DOCKER_HOST
fi

# Parse argv
while [ $# -gt 0 ]; do
  #echo Arg: "${1}"
  #echo "$@"

  case "$1" in
    -H=*|--host=*) parse_host "${1#*=}"; shift 1;;
    -H|--host) parse_host "${2}"; shift 2;;

    -v=*|--volume=*) add_volume "${1#*=}"; shift 1;;
    -v|--volume) add_volume "${2}"; shift 2;;

    *) args+=("${1}"); shift 1;;
  esac

  #echo "${args[@]}"
  #echo
done

if [ ! -z "${rocker_hostname}" ]; then
  debug '$' sudo -E DOCKER_HOST="${rocker_hostname}" rockerd port
  port="$(sudo -E DOCKER_HOST="${rocker_hostname}" rockerd port)"
  host_arg="--host tcp://127.0.0.1:${port}"
fi

debug_args "${docker}" $host_arg "${args[@]}"
exec "${docker}" $host_arg "${args[@]}"
